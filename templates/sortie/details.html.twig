{% extends 'base.html.twig' %}

{% block title %}Profil{% endblock %}

{% block body %}
    <div class="container mx-auto p-5" style="width: 50%">
        <div class="card text-center shadow">
            <div class="row">
                <div class="col-md-12">
                    <div class="card-body">
                        <h5 class="card-title">sortie {{ sortieConsulte.nom }}</h5>
                        <p><strong>Nom de la sortie: </strong>{{ sortieConsulte.nom }}</p>
                        <p><strong>Date de la sortie : </strong>{{ sortieConsulte.dateHeureDebut | date('d/m/Y - H:m')}}</strong></p>
                        <p><strong>Date limite de l'inscription : </strong>{{ sortieConsulte.dateLimiteInscription | date('d/m/Y') }}</p>
                        <p><strong>Nombre de place : </strong>{{ sortieConsulte.nbInscriptionsMax }}</p>
                        <p><strong>Dur√©e :  </strong>{{ sortieConsulte.duree }}</p>
                        <p><strong>Campus : </strong>{{ sortieConsulte.siteOrganisateur }}</p>
                        <p><strong>Lieu : </strong>{{ sortieConsulte.lieu }}</strong></p>
                        <table class="table table-striped table-bordered rounded-2 shadow m-3">
                            <thead class="table-secondary">
                            <tr>
                                <th scope="col">Pseudo : </th>
                                <th scope="col">Nom : </th>
                            </tr>
                            </thead>
                            <tbody class="table-group-divider">
                                {% for participant in sortieConsulte.participants %}
                                    <td>{{ participant.pseudo }}</td>
                                    <td><a href="{{ path('profil_details', {'id': participant.id}) }}">{{ participant.nom }}</a></td>
                                {% endfor %}
                            </tbody>
                        </table>
                        <a href="{{ path('main_accueil') }}"><button type="button">Retour</button></a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}